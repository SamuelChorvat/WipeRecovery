<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WipeRecoveryApp.ViewModels"
        xmlns:models="using:WipeRecoveryApp.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="WipeRecoveryApp.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Wipe Recovery"
        Width="700"
        Height="500">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16">

            <TextBlock Text="Back up before the boss does." FontSize="18" />

            <TextBlock Text="Detected WoW Versions:" FontWeight="Bold" />

            <ItemsControl ItemsSource="{Binding DetectedVersions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:GameVersionInfo">
                        <CheckBox Content="{Binding DisplayName}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Include AddOns:" VerticalAlignment="Center" />
                <ToggleSwitch IsChecked="{Binding IncludeAddOns}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Backup Folder:" VerticalAlignment="Center" />
                <TextBox Width="400" Text="{Binding BackupPath, Mode=TwoWay}" />
                <Button Content="Browseâ€¦" Command="{Binding BrowseFolderCommand}" />
            </StackPanel>

            <Button Content="Back Up Now"
                    Command="{Binding BackupCommand}" />

            <TextBlock Text="{Binding StatusMessage}" FontStyle="Italic" Foreground="Gray" />

        </StackPanel>
    </ScrollViewer>
</Window>

