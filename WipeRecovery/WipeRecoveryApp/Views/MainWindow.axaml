<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WipeRecoveryApp.ViewModels"
        xmlns:models="using:WipeRecoveryApp.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="WipeRecoveryApp.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Wipe Recovery"
        Width="700"
        Height="700">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16">

            <TextBlock Text="Back up before the boss does." FontSize="18" />

            <!-- WoW Folder Picker -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="WoW Folder:" VerticalAlignment="Center" />
                <TextBox Width="400" Text="{Binding WowRootPath, Mode=TwoWay}" IsReadOnly="True" />
                <Button Content="Browse…" Command="{Binding BrowseWowRootCommand}" />
            </StackPanel>
            
            <!-- Missing WoW Folder Warning -->
            <TextBlock Text="No valid WoW folder found. Please select one above."
                       Foreground="Yellow"
                       IsVisible="{Binding HasValidWowRoot, Converter={StaticResource InverseBoolConverter}}" />

            <!-- Detected Versions -->
            <StackPanel IsVisible="{Binding HasValidWowRoot}">
                <TextBlock Text="Detected WoW Versions:" FontWeight="Bold" />
                
                <TextBlock Text="No WoW versions found in this folder. Try selecting a different World of Warcraft directory."
                           Foreground="Yellow"
                           IsVisible="{Binding ShowNoVersionsWarning}" />

                <ItemsControl ItemsSource="{Binding DetectedVersions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:GameVersionInfo">
                            <CheckBox Content="{Binding DisplayName}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- AddOns Toggle -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Include AddOns:" VerticalAlignment="Center" />
                <ToggleSwitch IsChecked="{Binding IncludeAddOns}" />
            </StackPanel>

            <!-- Backup Folder Picker -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Backup Folder:" VerticalAlignment="Center" />
                <TextBox Width="400" Text="{Binding BackupPath, Mode=TwoWay}" IsReadOnly="True" />
                <Button Content="Browse…" Command="{Binding BrowseFolderCommand}" />
            </StackPanel>

            <!-- Backup Button -->
            <Button Content="Back Up Now"
                    Command="{Binding BackupCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

            <!-- Restore Section -->
            <TextBlock Text="Restore Backup:" FontWeight="Bold" />

            <ComboBox ItemsSource="{Binding AvailableBackups}"
                      SelectedItem="{Binding SelectedBackup}"
                      Width="400">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <CheckBox Content="Restore WTF" IsChecked="{Binding RestoreWtf}" />
                <CheckBox Content="Restore AddOns" IsChecked="{Binding RestoreAddOns}" />
            </StackPanel>

            <Button Content="Restore Selected"
                    Command="{Binding RestoreSelectedCommand}" 
                    IsEnabled="{Binding SelectedBackup}" />
            
            <ProgressBar IsIndeterminate="True"
                         Height="6"
                         IsVisible="{Binding IsBusy}" />

            <TextBlock Text="{Binding StatusMessage}" FontStyle="Italic" Foreground="Gray" />

        </StackPanel>
    </ScrollViewer>
</Window>


